<AnchorPane prefHeight="565.0" prefWidth="497.0" styleClass="main_widget" stylesheets="@../../style/projects/add_project.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.projects.UpdateProjectController">
