            <children>
                <Label alignment="TOP_CENTER" prefHeight="35.0" prefWidth="457.0" styleClass="title" text="Update Project" textAlignment="JUSTIFY" textFill="WHITE">
                    <font>
                        <Font name="Bell MT Italic" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="TOP_CENTER" prefHeight="565.0" prefWidth="497.0">
