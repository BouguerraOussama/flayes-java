                            <padding>
                                <Insets bottom="15.0" top="15.0" />
                            </padding>
                        </Separator>
                        <VBox prefHeight="565.0" prefWidth="409.0">
                            <children>
                                <Label alignment="CENTER" prefHeight="17.0" prefWidth="163.0" text="Enter start date:" textFill="WHITE" />
