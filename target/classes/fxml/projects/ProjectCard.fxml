<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="50.0" maxWidth="800.0" prefHeight="50.0" prefWidth="800.0" styleClass="background" stylesheets="@../../style/projects/ProjectCard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.projects.ProjectCardController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" spacing="30.0">
         <children>
            <ImageView fitHeight="34.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
               <image>
                  <Image url="@../../images/project.png" />
               </image>
            </ImageView>
            <Label fx:id="project_name" alignment="CENTER" prefHeight="21.0" prefWidth="156.0" text="Label">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="project_type" alignment="CENTER" prefHeight="21.0" prefWidth="156.0" text="Label">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="project_status" alignment="CENTER" prefHeight="21.0" prefWidth="156.0" text="Label">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="date_of_expiration" alignment="CENTER" prefHeight="21.0" prefWidth="156.0" text="Label">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="projectCardButton" mnemonicParsing="false" onAction="#projectCardButtonClicked" prefHeight="25.0" prefWidth="156.0" styleClass="submit" text="Invest" textFill="WHITE">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
